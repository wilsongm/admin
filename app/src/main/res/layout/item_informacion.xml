<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/FotoInf"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/ic_launcher" />


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            >


            <TextView
                android:id="@+id/idMarca"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Mitsubishi mirage G4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="298dp"
                android:layout_height="66dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/desde"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="@string/desde" />

                <TextView
                    android:id="@+id/fechaDesde"
                    android:layout_width="127dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="20/12/2017  13:00"
                    android:textColor="@color/colorPrimaryDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginLeft="-217dp"
                    android:layout_marginTop="32dp">


                    <TextView
                        android:id="@+id/hasta"
                        android:layout_width="90dp"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="@string/hasta" />

                    <TextView
                        android:id="@+id/fechahasta"
                        android:layout_width="127dp"
                        android:layout_height="31dp"
                        android:gravity="center"
                        android:text="21/12/2017  13:00"
                        android:textColor="@color/colorPrimaryDark" />


                </LinearLayout>




            </LinearLayout>


            <TextView
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="13dp"
                android:gravity="center"
                android:text="Economico"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idPrecioInf"
                android:layout_width="101dp"
                android:layout_marginLeft="180dp"
                android:layout_height="36dp"
                android:layout_below="@+id/idEstado"
                android:layout_marginTop="115dp"
                android:gravity="center"
                android:text="RD$ 3,809,65"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="14dp"
                android:textStyle="bold" />


        </RelativeLayout>




    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary"


        />



</LinearLayout>