<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/idFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"

            >


            <TextView
                android:id="@+id/idMarca"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Mitsubishi mirage G4"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/idIcono1"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_below="@+id/idMarca"
                android:layout_marginTop="14dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/iconaire" />

            <TextView
                android:id="@+id/tipo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="65dp"
                android:text="A/C"
                android:textColor="@color/colorPrimaryDark" >


            </TextView>

            <ImageButton
                android:id="@+id/idIcono2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/icontranmision" />

            <TextView

                android:id="@+id/tipo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="65dp"
                android:text="A"
                android:textColor="@color/colorPrimaryDark"></TextView>

            <ImageButton
                android:id="@+id/idIcono4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="143dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/iconauto" />

            <TextView
                android:id="@+id/tipo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="65dp"
                android:text="5"
                android:textColor="@color/colorPrimaryDark"></TextView>


            <ImageButton
                android:id="@+id/idIcono3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/iconuser"
                 />

            <TextView
                android:id="@+id/tipo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="128dp"
                android:layout_marginTop="65dp"
                android:text="4"
                android:textColor="@color/colorPrimaryDark"></TextView>

            <TextView
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@+id/idIcono1"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:text="Economico"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/idEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Disponible"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idPrecio"
                android:layout_width="101dp"
                android:layout_height="36dp"
                android:layout_below="@+id/idEstado"
                android:layout_marginTop="61dp"
                android:gravity="center"
                android:text="RD$ 3,809,65"
                android:textColor="@color/design_default_color_primary_dark"
                android:textSize="14dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/l"
            android:layout_width="17dp"
            android:layout_height="111dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorAccent"

            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary"


        />


</LinearLayout>